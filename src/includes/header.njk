<header class="bg-indigo-lightest py-20">
  <div class="w-5/6 max-w-lg ml-auto mr-auto h-full">
    <div class="flex items-center justify-center text-center h-full">
      <div>
        <h1 class="text-4xl sm:text-5xl font-black mb-4">
        {{ renderData.title or title or metadata.title }}
        </h1>
        <h2 class="text-2xl sm:text-3xl text-indigo-darker opacity-75 font-normal leading-tight mb-8">
          {{ subtitle }}
        </h2>

        <div class="flex flex-col sm:flex-row justify-center pt-6">
          {% if buttonName %}
            <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
              <a href="{{ buttonUrl }}" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-indigo-600 bg-white hover:text-indigo-500 focus:outline-none focus:shadow-outline-blue transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10">
                {{ buttonName }}
              </a>
            </div>
          {% endif %}
          {% if buttonSecondName %}
            <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
              <a href="{{ buttonSecondUrl }}" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-indigo-600 bg-white hover:text-indigo-500 focus:outline-none focus:shadow-outline-blue transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10">
                {{ buttonSecondName }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</header>