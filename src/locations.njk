---
layout: base
title: Locations
---

<section class="p-8 sm:p-12 xl:p-16">
  {%- for tag, locations in collections %}
    {% set collectionsLength = collections | length %}
    {% set locationsLength = locations | length %}
    {% if tag == "locations" %}
      <p class="py-2 pb-4 text-3xl font-bold">Total testing locations: {{ locationsLength - collectionsLength + 2 }} testing locations</p>
    {% endif %}
  {%- endfor %}
  {%- for tag, locations in collections | dictsort %}
    {% if tag == "all" %}
    {% elseif tag == "locations" %}
    {% else %}
      {% if locations | length - 1 == 0 %}
        <p class="py-2 text-2xl text-red"><a href="{{ tag | slug }}/"><span class="font-medium">{{ tag }}</a>:</span> {{ locations | length - 1 }} testing locations</p>
      {% elseif locations | length - 1 == 1 %}
        <p class="py-2 text-2xl"><a href="{{ tag | slug }}/"><span class="font-medium">{{ tag }}</a>:</span> {{ locations | length - 1 }} testing location</p>
      {% else %}
        <p class="py-2 text-2xl"><a href="{{ tag | slug }}/"><span class="font-medium">{{ tag }}</a>:</span> {{ locations | length - 1 }} testing locations</p>
      {% endif %}
    {% endif %}
  {%- endfor %}
</section>